<Window x:Class="Framefield.Tooll.Components.CrashReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crash Report" Height="500" Width="700">
    <Grid Background="#FFF8F8F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Background="Transparent"  Grid.Row="0" Margin="8" TextWrapping="Wrap" >Oh nooo! Tooll just died! <LineBreak />  
Please send the crash report to <Hyperlink NavigateUri="mailto:crash-reports@framefield.com">crash-reports@framefield.com</Hyperlink>.</TextBlock>
        <TextBox Margin="8" Grid.Row="1" FontFamily="Consolas" x:Name="XCrashReportTextBox">Some Content</TextBox>
        <Button Margin="8" Grid.Row="3" Width="50" HorizontalAlignment="Right" Click="ExitButtonHandler">Exit</Button>
    </Grid>
</Window>
